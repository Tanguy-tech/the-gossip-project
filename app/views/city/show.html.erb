<div class="text-center">
    <h2>Voici les Gossips qui on été écris à <%= @city.name %></h2>
    <br>
    <% @gossips.each do |gossip| %>
        <div class="card-deck mb-3 text-center">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">Gossip N°<%=  gossip.id%> </h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title"><%= gossip.title %><small class="text-muted"></small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Author Name :<%=  gossip.user.first_name%></li>
                        <li>Author Last Name :<%= gossip.user.last_name%></li>
                        <li>Author age :<%= gossip.user.age %></li>
                    </ul>
                </div>
            </div>
        </div>
    <% end %>
</div>